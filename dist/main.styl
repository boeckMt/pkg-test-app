#card {
  position: absolute;
  width: 100%;
  height: 600px;

  img {
    width: 100%;
    height: auto;
  }

  .card {
    text-align: center;
    width: 100%;
    position: relative;
    top: 45%;
    -webkit-transform: translateY(-45%);
    -ms-transform: translateY(-45%);
    transform: translateY(-45%);
  }

  .front, .back {
    cursor: pointer;
    height: 600px;
  }
}
